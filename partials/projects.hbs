{{#if resume.projects.length}}
  <div id='projects' class='sectionBlock'>
    <div class='sectionIntro'>
      <div class='sectionName'>
        <span>项目经历</span>
      </div>
      <div class='sectionIntroLine'></div>
    </div>
    <div class='sectionContent'>
      <ul class='highlights'>
        {{#each resume.projects}}
          <li>
            {{#if url}}
              <span class='title'><a href="{{url}}">{{name}}</a>: </span>
            {{else}}
              <span class='title'>{{name}}: </span>
            {{/if}}
            {{#if highlights.length}}
              {{#each highlights}}
                {{!-- formatting is expecting resume.json highlights to not have end punctuation --}}
                <span>{{.}}</span>.{{#unless @last}} {{/unless}}
              {{/each}}
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='sectionLine'></div>
{{/if}}
